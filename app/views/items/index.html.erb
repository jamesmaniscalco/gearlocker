<% content_for :page_heading do %>
<h1>Items</h1>
<% end %>


<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= link_to "edit", edit_item_path(item) %> <%= link_to "delete", item_path(item), method: :delete, data: { confirm: "are you sure you want to delete '#{item.name}'?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<p><%= link_to "add new item", new_item_path %></p>
